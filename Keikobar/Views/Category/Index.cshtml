@model IEnumerable<Keikobar.Models.Category>


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="fa-solid fa-plus pr-2"></i>Create New Category
            </a>
        </div>
    </div>

    <br/><br/>

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width: 100%">
            <thead>
            <tr>
                <th>Category Name</th>
                <th>Display Order</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="55%">@Html.DisplayFor(modelItem => obj.Name)</td>
                    <td width="25%">@obj.DisplayOrder</td>
                    <td>
                        <div class="w-100 btn-group" role="group">
                            <a asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-outline-info mx-2">
                                <i class="fa-solid fa-pen-to-square"></i>
                            </a>
                            <a asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-outline-danger mx-2">
                                <i class="fa-solid fa-trash"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            } 
            </tbody>
        </table>
    }
    else
    {
        <p>No Category exists.</p>
    }


</div>