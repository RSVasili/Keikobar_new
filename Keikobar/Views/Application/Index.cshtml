@model IEnumerable<Keikobar.Models.ApplicationType>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Applicaton Type List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Application" asp-action="Create" class="btn btn-primary">Create New Application Type</a>
        </div>
    </div>

    <br/><br/>

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width: 100%">
            <thead>
            <tr>
                <th class="col-6">Application Type Name</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <th class="text-monospace">@obj.Name</th>
                    <th></th>
                </tr>
            }
            </tbody>
        </table>
    }
    else
    {
        <p>No Category exists.</p>
    }

</div>